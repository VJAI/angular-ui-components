    "ng-packagr": "^3.0.0",
    "node-sass": "^4.9.3",
    "node-static": "^0.7.11",
    "replace": "^1.0.0",
    "sass-lint": "^1.12.1",
    "svg-sprite": "^1.5.0",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "typedoc": "^0.12.0",
    "typescript": "~3.2.4",
    "webpack": "^4.4.1"
  },
  "repository": {
    "type": "git",
